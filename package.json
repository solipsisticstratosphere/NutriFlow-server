{
  "name": "nutriflow-server",
  "version": "1.0.0",
  "description": "Backend server for NutriFlow nutrition tracking app",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "db:clear": "node scripts/clear-db.js",
    "db:seed": "node scripts/seed.js",
    "db:reset": "node scripts/clear-db.js && node scripts/seed.js",
    "test:api": "node tests/test-api.js",
    "test:ai": "node tests/test-ai.js",
    "test:ai-suggestions": "node tests/test-ai-suggestions.js",
    "test:cache": "node tests/test-cache.js",
    "test:water": "node tests/test-water-tracking.js",
    "test:validation": "node tests/test-validation-direct.js",
    "test:full": "node tests/full-test.js",
    "test:all": "npm run test:api && npm run test:water && npm run test:validation && npm run test:cache"
  },
  "keywords": [
    "nutrition",
    "calories",
    "health",
    "fitness"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@google/generative-ai": "^0.21.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.0.1",
    "groq-sdk": "^0.37.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "node-cache": "^5.1.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  }
}
